{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Simulation Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/simulation/build/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/simulation/build",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug Simulation Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/simulation/build/main",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/simulation/build",
      "console": "externalTerminal"
    },
    {
      "name": "Debug Lidar Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/lidar/build/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/lidar/build",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "env": {
        "DISPLAY": "localhost10:0"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}